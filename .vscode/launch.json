{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "hardhat test",
      "skipFiles": ["<node_internals>/**"],
      "runtimeExecutable": "${workspaceFolder}/packages/hardhat/node_modules/.bin/hardhat",
      "args": ["test", "--network", "localhost"],
      "cwd": "${workspaceFolder}/packages/hardhat"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "hardhat new dao",
      "skipFiles": ["<node_internals>/**"],
      "runtimeExecutable": "${workspaceFolder}/packages/hardhat/node_modules/.bin/hardhat",
      "args": ["run", "./scripts/new-dao.ts", "--network", "rinkeby"],
      "cwd": "${workspaceFolder}/packages/hardhat"
      // "env": {
      //   "HARDHAT_FORK": "rinkeby"
      // }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "hardhat mock-actions",
      "skipFiles": ["<node_internals>/**"],
      "runtimeExecutable": "${workspaceFolder}/packages/hardhat/node_modules/.bin/hardhat",
      "args": ["run", "./scripts/mock-actions.ts", "--network", "localhost"],
      "cwd": "${workspaceFolder}/packages/hardhat",
      "env": {
        "HARDHAT_FORK": "rinkeby"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "hardhat deploy",
      "skipFiles": ["<node_internals>/**"],
      "runtimeExecutable": "${workspaceFolder}/packages/hardhat/node_modules/.bin/hardhat",
      "args": ["deploy"],
      "cwd": "${workspaceFolder}/packages/hardhat"
    }
  ]
}
